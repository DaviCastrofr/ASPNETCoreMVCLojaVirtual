@addTagHelper  *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LojaVirtual.Models.Colaborador
@{
    ViewData["Title"] = "Cadastrar";
}
<h1>Colaborador</h1>


<form asp-action="Cadastrar" asp-controller="Colaborador" method="post">
    <div class="row mb-3">
        <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Nome" class="form-control" placeholder="Digite o nome do colaborador">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Digite o E-mail do colaborador">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>