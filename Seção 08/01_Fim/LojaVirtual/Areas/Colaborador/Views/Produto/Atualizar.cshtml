@addTagHelper  *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LojaVirtual.Models.Produto
@{
    ViewData["Title"] = "Atualizar";
}
<h1>Atualizar</h1>


<form asp-action="Atualizar" asp-controller="Produto" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="CategoriaId" class="col-sm-2 col-form-label">Categoria</label>
            <div class="col-sm-10">
                <select asp-for="CategoriaId" class="form-control" asp-items="@ViewBag.Categorias">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="Descricao" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Quantidade" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mr-sm-2">
                <input asp-for="Quantidade" type="number" class="form-control" placeholder="Digite a quantidade de produtos">
                <div class="input-group-prepend">
                    <div class="input-group-text">unid</div>
                </div>
            </div>
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Valor" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mr-sm-2">
                <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                </div>
                <input asp-for="Valor" class="form-control dinheiro" placeholder="Digite o preço do produto">
            </div>
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
    </div>

    <h2>Frete</h2>

    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="Peso" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mr-sm-2">
                <input asp-for="Peso" class="form-control" placeholder="Digite o Peso do produto">
                <div class="input-group-prepend">
                    <div class="input-group-text">kg</div>
                </div>
            </div>
            <span asp-validation-for="Peso" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Largura" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mr-sm-2">
                <input asp-for="Largura" type="number" class="form-control" placeholder="Digite a largura do produto">
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
            <span asp-validation-for="Largura" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Altura" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mr-sm-2">
                <input asp-for="Altura" type="number" class="form-control" placeholder="Digite a altura do produto">
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
            <span asp-validation-for="Altura" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Comprimento" class="col-sm-2 col-form-label"></label>
            <div class="input-group mb-2 mr-sm-2">
                <input asp-for="Comprimento" type="number" class="form-control" placeholder="Digite o comprimentro do produto">
                <div class="input-group-prepend">
                    <div class="input-group-text">cm</div>
                </div>
            </div>
            <span asp-validation-for="Comprimento" class="text-danger"></span>
        </div>
    </div>

    <div class="row Imagens">
        @for (int i = 0; i < 12; i++)
        {
            <div class="col-md-3">
                <img src="~/img/imagem-padrao.png" class="img-thumbmail" />
                <div class="btn btn-danger btn-imagem-excluir">x</div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>